<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"


    tools:context="com.sirmothupii.includeme.Votes">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Category"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/spinCategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </Spinner>

    <ListView
        android:id="@+id/lstSpending"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_upvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upvote"/>

        <Button
            android:id="@+id/btn_downvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downvote"/>

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have downvoted this Spending"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClickPrevButton"
            android:text="Previous"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNextButton"
            android:text="Next Spending"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
