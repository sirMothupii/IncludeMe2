<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"


    tools:context="com.sirmothupii.includeme.Votes">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Category"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/spinCategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </Spinner>

    <ListView
        android:id="@+id/lstSpending"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBtnDownVote"
            android:layout_width="63dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@color/activity_background"
            android:onClick="onItemClickBtnUpVote"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/thumbs_up" />

        <ImageButton
            android:id="@+id/imgBtnUpVoat"
            android:layout_width="63dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@color/activity_background"
            android:onClick="onItemClickBtnDownVote"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/down" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have downvoted this Spending"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/activity_background"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/back_icon"
            android:onClick="onClickPrevButton" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/next_icon"
            android:onClick="onClickNextButton"/>
    </LinearLayout>

</LinearLayout>
